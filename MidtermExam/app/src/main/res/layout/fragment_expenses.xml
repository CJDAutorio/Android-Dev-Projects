<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpensesFragment">

    <TextView
        android:id="@+id/expensesFragment_totalExpenses_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:text="@string/total_expenses"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/expensesFragment_totalExpenses_Number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/expensesFragment_totalExpenses_Label"
        app:layout_constraintStart_toStartOf="@+id/expensesFragment_totalExpenses_Label"
        app:layout_constraintTop_toBottomOf="@+id/expensesFragment_noOfRecords_Label"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/expensesFragment_noOfRecords_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/no_of_records"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/expensesFragment_noOfRecords_Number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/expensesFragment_noOfRecords_Label"
        app:layout_constraintStart_toStartOf="@+id/expensesFragment_noOfRecords_Label"
        app:layout_constraintTop_toBottomOf="@+id/expensesFragment_noOfRecords_Label"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/expensesFragment_expensesSummary_Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/expenses_summary"
        app:layout_constraintEnd_toEndOf="@+id/expensesFragment_noOfRecords_Label"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/expensesFragment_noOfRecords_Label"
        app:layout_constraintTop_toBottomOf="@+id/expensesFragment_noOfRecords_Number" />

    <Button
        android:id="@+id/expensesFragment_addExpense_Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/add_expense"
        app:layout_constraintEnd_toEndOf="@+id/expensesFragment_totalExpenses_Label"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/expensesFragment_totalExpenses_Label"
        app:layout_constraintTop_toBottomOf="@+id/expensesFragment_noOfRecords_Number" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/expensesFragment_RecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expensesFragment_expensesSummary_Button" />

</androidx.constraintlayout.widget.ConstraintLayout>